<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<payment>
			<wallee_payment_{id}>
				<space>{spaceId}</space>
				<active>{active}</active>
				<model>wallee_payment::{id}</model>
				<payment_action>initialize</payment_action>
				<group>wallee</group>
				<title>{title}</title>
				<description>{description}</description>
				<show_description>1</show_description>
				<show_image>1</show_image>
				<sort_order>{sortOrder}</sort_order>
				<order_status>pending</order_status>
				<is_gateway>1</is_gateway>
				<can_authorize>0</can_authorize>
				<can_capture>1</can_capture>
				<can_capture_partial>1</can_capture_partial>
				<can_refund>1</can_refund>
				<can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
				<can_void>1</can_void>
				<can_cancel>1</can_cancel>
				<can_use_internal>1</can_use_internal>
				<can_use_checkout>1</can_use_checkout>
				<can_initialize>1</can_initialize>
				<can_fetch_transaction_info>0</can_fetch_transaction_info>
				<can_review_payment>1</can_review_payment>
				<can_accept_payment>1</can_accept_payment>
				<can_deny_payment>1</can_deny_payment>
			</wallee_payment_{id}>
		</payment>
	</default>
</config>